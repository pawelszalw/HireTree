#!/bin/bash

commit_msg=$(cat "$1")

pattern='^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\(.+\))?(!)?: .+'

if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo ""
  echo "  ERROR: Commit message does not follow Conventional Commits."
  echo ""
  echo "  Format:  <type>[optional scope]: <description>"
  echo "  Example: feat(dashboard): add job pipeline view"
  echo ""
  echo "  Allowed types:"
  echo "    feat     – new feature"
  echo "    fix      – bug fix"
  echo "    refactor – code change that is not a feature or fix"
  echo "    docs     – documentation only"
  echo "    style    – formatting, no logic change"
  echo "    test     – adding or updating tests"
  echo "    perf     – performance improvement"
  echo "    build    – build system or dependencies"
  echo "    ci       – CI/CD configuration"
  echo "    chore    – other changes"
  echo "    revert   – revert a previous commit"
  echo ""
  exit 1
fi

exit 0
